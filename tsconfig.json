{
    "compilerOptions": {
      "target": "ES5",
      "module": "ES6",
      "jsx": "react",
      "lib": ["ES2016", "DOM"],
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "downlevelIteration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/other/**/*", "**/*.spec.ts"]
  }